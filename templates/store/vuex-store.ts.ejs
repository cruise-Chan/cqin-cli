import Vue from 'vue';
import Vuex, { Store } from 'vuex';

Vue.use(Vuex);

interface State {
  count: number;
}

export default new Store({
  state: {
    count: 0
  } as State,
  mutations: {
    increment(state) {  // state 会自动推断为 State 类型
      state.count++;
    }
  },
  actions: {
    increment({ commit }) {  // context 自动推断类型
      commit('increment');
    }
  }
});